<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyleWhiteRegular">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextStyleBlackRegular">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextStyleWhiteBold">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextStyleBlackBold">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextStyleWhiteLight">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_light</item>
    </style>

    <style name="TextStyleBlackLight">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_light</item>
    </style>

    <style name="SpinnerBlackTextTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="LeftRoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>
