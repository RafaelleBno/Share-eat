<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your order"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Image + Nom/€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/imagePlatMini"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/nomPlatMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom du plat"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/prixPlatMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 €"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Label Portions -->
        <TextView
            android:id="@+id/labelPortions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portions :"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp" />

        <!-- Sélecteur de quantité -->
        <LinearLayout
            android:id="@+id/quantiteContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/buttonMoins"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/black"/>

            <TextView
                android:id="@+id/textQuantite"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginHorizontal="12dp" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/black"/>
        </LinearLayout>

        <!-- Ligne -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginVertical="12dp" />

        <!-- Localisation + nom -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/nomUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utilisateur"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/appartementUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | 1404"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Rating -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4"
            android:stepSize="1"
            android:isIndicator="true"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginBottom="16dp" />

        <!-- Horaire -->
        <TextView
            android:id="@+id/horaires"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21h30 - 23h"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp" />

        <!-- Retrait -->
        <TextView
            android:id="@+id/retraitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PickUp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Bouton checkout -->
        <Button
            android:id="@+id/checkoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Checkout"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
