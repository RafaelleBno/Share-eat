<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">

    <!-- Nom -->
    <TextView
        android:id="@+id/prenomprofil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Nom Prénom"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:fontFamily="@font/inter_18pt_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!-- Photo de profil -->
    <ImageView
        android:id="@+id/photo_profil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/usericon"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/prenomprofil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Badge certification positionné sur la photo -->
    <ImageView
        android:id="@+id/photo_certif"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/certif"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/photo_profil"
        app:layout_constraintEnd_toEndOf="@id/photo_profil"
        android:layout_margin="2dp"/>


    <!-- Étoiles -->
    <ImageView
        android:id="@+id/etoiles"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/quatre_etoiles"
        app:layout_constraintTop_toBottomOf="@id/photo_profil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Infos utilisateur -->
    <TextView
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First name :"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/etoiles"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/firstname"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail :"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel :"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/mail"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/apt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apartement :"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tel"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Boutons favoris/wallet/orders -->
    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/apt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Favoris -->
        <LinearLayout
            android:id="@+id/heart"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/heart"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favoris"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="@font/inter_18pt_bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Wallet -->
        <LinearLayout
            android:id="@+id/wallet"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/wallet"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="@font/inter_18pt_bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Orders -->
        <LinearLayout
            android:id="@+id/order"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/order"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="@font/inter_18pt_bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Section POST / AVIS -->
    <FrameLayout
        android:id="@+id/post_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_group">

        <TextView
            android:id="@+id/textPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_bold"
            android:paddingBottom="6dp"
            android:text="POSTS"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textAvis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:fontFamily="@font/inter_18pt_bold"
            android:paddingBottom="6dp"
            android:text="AVIS"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <!-- Soulignement POSTS -->
        <View
            android:layout_width="92dp"
            android:layout_height="9dp"
            android:layout_gravity="bottom|start"
            android:background="@color/white"
            android:translationY="2dp"/>
    </FrameLayout>

    <!-- Liste des plats -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/post_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
