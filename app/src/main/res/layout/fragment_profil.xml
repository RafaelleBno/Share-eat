<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".fragments.ProfilFragment">

    <!-- ←———————— 1. EN‑TÊTE PROFIL ————————→ -->
    <TextView
        android:id="@+id/prenomprofil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/inter_18pt_bold"
        android:text="PRENOM NOM"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/photo_profil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/usericon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prenomprofil"/>

    <ImageView
        android:id="@+id/photo_certif"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="84dp"
        android:scaleType="centerCrop"
        android:src="@drawable/certif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prenomprofil"/>

    <ImageView
        android:id="@+id/etoiles"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/quatre_etoiles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prenomprofil"/>

    <!-- ←———————— 2. PETITE BIO ————————→ -->
    <LinearLayout
        android:id="@+id/avis_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_profil"/>

    <TextView
        android:id="@+id/phraseavis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_18pt_regular"
        android:text="Student at CY, I love cooking in my free time !"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avis_block"/>

    <!-- ←———————— 3. INFOS UTILISATEUR ————————→ -->
    <TextView
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_18pt_regular"
        android:text="First name :   "
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phraseavis"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_18pt_regular"
        android:text="Name :   "
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstname"/>

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_18pt_regular"
        android:text="Mail :   "
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"/>

    <TextView
        android:id="@+id/tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_18pt_regular"
        android:text="Tel :   "
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mail"/>

    <TextView
        android:id="@+id/apt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_18pt_regular"
        android:text="Apartement :   "
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tel"/>

    <!-- Groupe de boutons -->
    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Bouton Favoris -->
        <LinearLayout
            android:id="@+id/heart"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/heart"
                android:contentDescription="Favoris" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favoris"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="@font/inter_18pt_bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Bouton Wallet -->
        <LinearLayout
            android:id="@+id/wallet"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/wallet"
                android:contentDescription="Wallet" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="@font/inter_18pt_bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Bouton Orders -->
        <LinearLayout
            android:id="@+id/order"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/order"
                android:contentDescription="Orders" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="@font/inter_18pt_bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>



    <!-- ←———————— 5. ONGLET POSTS / AVIS ————————→ -->
    <FrameLayout
        android:id="@+id/post_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_group">

        <TextView
            android:id="@+id/textPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_bold"
            android:paddingBottom="6dp"
            android:text="POSTS"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textAvis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:fontFamily="@font/inter_18pt_bold"
            android:paddingBottom="6dp"
            android:text="AVIS"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <!-- Soulignement “POSTS” -->
        <View
            android:layout_width="92dp"
            android:layout_height="9dp"
            android:layout_gravity="bottom|start"
            android:background="@color/white"
            android:translationY="2dp"/>
    </FrameLayout>

    <!-- ←———————— 6. RECYCLERVIEW DES POSTS ————————→ -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_container"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_plat"/>

</androidx.constraintlayout.widget.ConstraintLayout>
