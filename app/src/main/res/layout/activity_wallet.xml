<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_rouge_pates">

    <TextView
        android:id="@+id/titrewallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WALLET"
        android:textSize="40sp"
        style="@style/TextStyleWhiteBold"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/prixwallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20â‚¬"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        style="@style/TextStyleWhiteBold"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toBottomOf="@id/titrewallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/fleche"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fleche_retour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Transfer to a bank account"
        android:textAllCaps="false"
        style="@style/TextStyleWhiteBold"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@id/prixwallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
