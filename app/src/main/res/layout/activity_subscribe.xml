<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€  FOND  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fond_rouge_pates"
        android:contentDescription=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€  CONTENU  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TITRE -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="64sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            app:fontFamily="@font/inter_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- SOUS-TITRE -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an account to get started!"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_regular"
            app:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- LABEL EMAIL -->
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_regular"
            app:fontFamily="@font/inter_regular"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- INPUT EMAIL -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="                    Enter your email"
            android:gravity="center_vertical|start"
            android:background="@drawable/white_rounded_button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:fontFamily="@font/inter_regular"
            app:fontFamily="@font/inter_regular"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/emailLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- LABEL PHONE -->
        <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_regular"
            app:fontFamily="@font/inter_regular"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/emailInput"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- BLOC PHONE -->
        <LinearLayout
            android:id="@+id/phoneBlock"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/white_rounded_button"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/phoneLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‡«ðŸ‡·"
                android:textSize="20sp"
                android:fontFamily="@font/inter_regular"
                app:fontFamily="@font/inter_regular"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+33"
                android:textSize="16sp"
                android:fontFamily="@font/inter_regular"
                app:fontFamily="@font/inter_regular"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/phoneInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="      Mobile number"
                android:gravity="center_vertical|start"
                android:inputType="phone"
                android:background="@null"
                android:textSize="16sp"
                android:fontFamily="@font/inter_regular"
                app:fontFamily="@font/inter_regular"/>
        </LinearLayout>

        <!-- LABEL PASSWORD -->
        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_regular"
            app:fontFamily="@font/inter_regular"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/phoneBlock"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- INPUT PASSWORD -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="                    Enter password"
            android:gravity="center_vertical|start"
            android:background="@drawable/white_rounded_button"
            android:paddingStart="16dp"
            android:paddingEnd="56dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:fontFamily="@font/inter_regular"
            app:fontFamily="@font/inter_regular"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/passwordLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ICÃ”NE Å’IL (centrÃ©e verticalement) -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/eyeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="Toggle password visibility"
            app:tint="#000000"
            app:layout_constraintEnd_toEndOf="@id/passwordInput"
            app:layout_constraintTop_toTopOf="@id/passwordInput"
            app:layout_constraintBottom_toBottomOf="@id/passwordInput"
            android:layout_marginEnd="16dp"/>

        <!-- BOUTON NEXT -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="NEXT â†’"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold"
            app:fontFamily="@font/inter_bold"
            android:background="@drawable/black_rounded_button"
            android:backgroundTint="@null"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/passwordInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- LIEN LOGIN -->
        <TextView
            android:id="@+id/goToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Log in"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/inter_regular"
            app:fontFamily="@font/inter_regular"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/nextButton"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

