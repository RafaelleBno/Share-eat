<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Titre -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your mobile number"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- Bloc tÃ©lÃ©phone : drapeau + +33 + numÃ©ro -->
    <LinearLayout
        android:id="@+id/phoneBlock"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#F1F1F1"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‡«ðŸ‡·"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+33"
            android:textSize="18sp"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Mobile number"
            android:textSize="16sp"
            android:background="@null"
            android:inputType="phone" />
    </LinearLayout>

    <!-- Champ mot de passe -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Enter password"
        android:background="#F1F1F1"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/phoneBlock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- IcÃ´ne Å“il -->
    <ImageView
        android:id="@+id/eyeIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_view"
        android:contentDescription="Toggle Password"
        app:layout_constraintEnd_toEndOf="@id/passwordInput"
        app:layout_constraintBottom_toBottomOf="@id/passwordInput"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Bouton Next noir -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Next â†’"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/black_rounded_button"
        android:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/passwordInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp" />

    <!-- Texte lÃ©gal -->
    <TextView
        android:id="@+id/legalText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="By proceeding, you consent to get calls, WhatsApp or SMS messages, including by automated means, from ShareEat and its affiliates to the number provided."
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ligne grise -->
    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/legalText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />


    <!-- Bouton Login blanc avec bordure -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goToLogin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Login if you already have an account"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/white_bordered_button"
        android:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/legalText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="53dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
