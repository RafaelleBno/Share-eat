<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Image du plat -->
        <ImageView
            android:id="@+id/imagePlat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="Image du plat"
            android:background="@drawable/rounded_image_bg" />

        <!-- Contenu à droite -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/nomPlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom du plat"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_clock"
                    app:tint="#444" />

                <TextView
                    android:id="@+id/heurePlat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19h00 - 19h15"
                    android:textSize="13sp"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginStart="6dp"
                    android:textColor="#444" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="#444" />

                <TextView
                    android:id="@+id/nomUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Henry"
                    android:textSize="13sp"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginStart="6dp"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/appartementUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | 1212"
                    android:textSize="13sp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="#444" />
            </LinearLayout>

            <!-- Étoiles -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star_yellow" />
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star_yellow" />
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star_yellow" />
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star_yellow" />
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star_gray" />
            </LinearLayout>
        </LinearLayout>

        <!-- Colonne droite : like + delete + prix -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Ligne contenant like et delete -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Like -->
                <ImageButton
                    android:id="@+id/likeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart_outline"
                    android:background="@android:color/transparent"
                    android:contentDescription="Like" />

                <!-- Delete -->
                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_close"
                    android:background="@android:color/transparent"
                    android:contentDescription="Supprimer"
                    android:layout_marginStart="55dp" />

            </LinearLayout>

            <!-- View espaceur -->
            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Prix -->
            <TextView
                android:id="@+id/prixPlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 €"
                android:textColor="#000"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginTop="12dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

